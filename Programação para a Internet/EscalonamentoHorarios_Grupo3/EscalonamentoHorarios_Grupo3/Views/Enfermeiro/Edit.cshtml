@model EscalonamentoHorarios_Grupo3.Models.Enfermeiro
@{
    ViewData["Title"] = "Alterar";
}
<body onload="showForm()">
</body> @*onload="showForm()" : Verifica se o campo DataNascimentoFilhos está a true. Se estiver mostra a div da data*@
<h2>Alterar o/a Enfermeiro/a <b>@Html.DisplayFor(model => model.Nome)</b></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="EnfermeiroID" />
            <div class="form-group">
                <label asp-for="NumeroEnf" class="control-label">Número Mecanográfico</label>
                <input asp-for="NumeroEnf" class="form-control" placeholder="p. ex. E12345" />
                <span asp-validation-for="NumeroEnf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadesServicos" class="control-label">Especialidade</label>
                <select asp-for="UnidadesServicos" class="form-control" asp-items="ViewBag.EspecialidadeEnfermeiroId"></select>
                <span asp-validation-for="UnidadesServicos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label">Contacto</label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIF" class="control-label">Nº Cartão Cidadão</label>
                <input asp-for="NIF" class="form-control" placeholder="p. ex. 12345678 5ZY9" />
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filhos" class="control-label">Tem filhos?</label>
                <select asp-for="Filhos" class="form-control" id="YesOrNo" onchange="showForm()">
                    <option value="false">Não</option>
                    <option value="true">Sim</option>
                </select>
            </div>
            <script type="text/javascript">//Algoritmo:
                //Se o utilizador selecionou a opcao "SIM" então
                //mostrar datebox para inserir data de nascimento
                function showForm() {
                    var selectBox = document.getElementById("YesOrNo"); //drop list
                    var selectedValue = selectBox.options[selectBox.selectedIndex].value; //valor selecionado na drop list
                    if (selectedValue == "true") { //Se 'Sim'
                        //buscar a div que contém o Datebox
                        var form = document.getElementById("formDate");
                        //mostrar div
                        if (form.style.display == 'none') {
                            form.style.display = 'block';
                        }
                    } else if (selectedValue == "false") {
                        var form = document.getElementById("formDate");
                        form.style.display = 'none';
                    }
                }</script>
            <div class="form-group" id="formDate" style="display: none;">
                <label asp-for="DataNascimentoFilhos" class="control-label">Data de Nascimento filho mais novo</label>
                <input asp-for="DataNascimentoFilhos" class="form-control" />
                <span asp-validation-for="DataNascimentoFilhos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index"><input type="button" value="Voltar à lista de enfermeiros" class="btn btn-default" /></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
