@model EscalonamentoHorarios_Grupo3.Models.Enfermeiro
@{
    ViewData["Title"] = "Detalhes";
}
<h2>Detalhes do/a Enfermeiro/a <b>@Html.DisplayFor(model => model.Nome)</b></h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Número Mecanográfico
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroEnf)
        </dd>
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            Especialidade
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UnidadesServico.UnidadesServicoID)
        </dd>
        <dt>
            Contacto
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            Nº Cartão Cidadão
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NIF)
        </dd>
        <dt>
            Filhos
        </dt>
        @*Se tiver FILHOS escrever 'SIM' Senão escrever 'NÃO'*@
        @if (Model.Filhos == true)
        {
            <dd>SIM</dd>
        }
        else
        {
            <dd>NÃO</dd>
        }
        @if (Model.Filhos == true)
        {
            <dt>
                Data de Nascimento do filho mais novo
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataNascimentoFilhos)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EnfermeiroID"><input type="button" value="Editar" class="btn btn-warning" /></a>
    <a asp-action="Index"><input type="button" value="Voltar à lista de enfermeiros" class="btn btn-default" /></a>
</div>